{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: c++.exe build active file",
      "command": "C:/MinGW/bin/c++.exe",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
